# =====================================================
# AI Brainstorm Platform - Environment Variables
# =====================================================

# ----------------
# Core Services
# ----------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ----------------
# Server Configuration
# ----------------
PORT=3001
NODE_ENV=development

# ----------------
# Phase 3.1: Document Re-examination Configuration
# ----------------

# Number of items changed to trigger document re-examination (default: 3)
# Increase this to reduce frequency of re-examination
REEXAM_CHANGE_THRESHOLD=3

# Maximum characters to send to AI for diff analysis (default: 3000)
# Reduce to save API costs, increase for more detailed comparisons
REEXAM_CONTENT_TRUNCATION=3000

# ----------------
# Phase 3.2: Research Coverage Scoring
# ----------------

# Penalty points deducted for each high-priority research gap (default: 15)
# Higher value = more aggressive scoring
COVERAGE_HIGH_PENALTY=15

# Penalty points deducted for each medium-priority research gap (default: 5)
COVERAGE_MEDIUM_PENALTY=5

# Maximum base score from research/item ratio (default: 70)
# This is the max score before quality bonus
COVERAGE_BASE_WEIGHT=70

# Bonus points added for good coverage (default: 30)
# Final score = baseScore + qualityBonus - gapPenalties
COVERAGE_QUALITY_BONUS=30

# ----------------
# API Timeouts (milliseconds)
# ----------------

# Timeout for Claude document generation (default: 60000 = 60s)
TIMEOUT_DOC_GEN=60000

# Timeout for gap analysis requests (default: 30000 = 30s)
TIMEOUT_GAP_ANALYSIS=30000

# Timeout for change identification (default: 15000 = 15s)
TIMEOUT_CHANGE_ID=15000
